@model List<UserDTO>;
@{
}

<style>
    .filterBlur{
        filter: blur(4px)
    }
    main .table {
        border: 1px solid rgb(37, 0, 0);
        background-color: black;
        border-radius: 5px;
    }

        main .table th, td {
            padding: 5px 10px;
            background-color: white
        }

    .table button {
        width: 3rem;
        height: 3rem;
        border: 3px solid black;
        cursor: pointer;
        color: white;
        border-radius: 50%;
        background-color: rgb(121, 5, 5);
        transition: border-color .2s ease, color .2s ease;
    }

        .table button:hover {
            border-color: transparent;
            color: rgb(6, 9, 163);
        }

        .deleteAccount{
            position:fixed;
            left:50%;
            transform:translateX(-50%) translateY(-50%);
            top:50%;
            background-color:white;
            border-radius:10px;
            width:10rem;
            height:5rem;
            box-shadow:0px 0px 15px black;
            display:none;
            flex-direction:column;
            justify-content:space-around;
            align-items:center;
        }
        .deleteAccount div{
            display:flex;
            justify-content:space-evenly;   
            width:100%;
            height:40%;
        }

        .deleteAccount button {
            width:50%;
            height:100%;
            border:none;
            background-color:transparent;
            cursor:pointer;

        }
        .deleteAccount button:hover{
            background-color:rgb(0,0,0,0.2);
        } 
        .deleteAccount button:first-child{
            color:red;
        }
        .deleteAccount button:last-child{
            color:green;
        }
        .deleteAccount:after{
            content:"";
            position:absolute;
            bottom:50%;
            width:100%;
            background-color:black;
            height:1px;
            left:0;

        }

        .ContainerEdit {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translateX(-50%) translateY(-50%);
            width: 50%;
            height: 50%;
            background-color: white;
            box-shadow: 10px 10px 10px black;
            border: 1px solid black;
            border-radius: 10px;
            display: none;
            justify-content: center;
        }

            .ContainerEdit ul {
                list-style: none;
                padding: 2rem 0;
                display: flex;
                flex-direction: column;
                gap: 10px;
            }
</style>
<div class="center" id="center">
    <h1>Usuários</h1>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Apagar</th>
            <th>Permissões</th>

        </tr>
        
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                    <button onclick="ToggleVisible('deleteAccount','@user.Id')">
                            <i class="fa-solid fa-trash"></i>
                        </button>

                    </td>
                    <td style="text-align: center;">
                    <button style="background-color:rgb(220,220,0)" onclick="EditPermissionsScreen('ContainerEdit','@user.Id')">
                            <i class="fa-solid fa-file-pen"></i>
                        </button>

                    </td>
                </tr>
            }
            
        
    </table>
</div>

<div class="deleteAccount" id="deleteAccount">
    <p>Deseja Apagar ?</p>
   <div>
        <button onclick="DeleteUser()">Sim</button>
        <button onclick="ToggleVisible('deleteAccount','')">Não</button>
   </div>
</div>

<div class="ContainerEdit" id="ContainerEdit">

</div>

